{
  "name": "luminary-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for Luminary coaching platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run clean && npm run test && npm run lint",
    "clean": "rm -rf dist",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "node src/database/seed.js",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "docs": "swagger-jsdoc -d swaggerDef.js src/routes/*.js -o docs/",
    "docker:build": "docker build -t luminary-backend .",
    "docker:run": "docker run -p 5000:5000 luminary-backend"
  },
  "keywords": [
    "coaching",
    "platform",
    "education",
    "nodejs",
    "express",
    "prisma"
  ],
  "author": "Luminary Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "aws-sdk": "^2.1531.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "stripe": "^14.7.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "pg": "^8.11.3",
    "prisma": "^5.7.1",
    "resend": "^4.7.0",
    "sharp": "^0.33.0",
    "stripe": "^14.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.3",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
